<link href="stylesheets/bootstrap.css" rel='stylesheet' type='text/css' />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->

<!-- Custom Theme files -->
<link href="stylesheets/activity.css" rel='stylesheet' type='text/css' />
<!-- Custom Theme files -->
<!-- webfonts -->
<!--icon-->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<!--icon-->
<!-- webfonts -->
<!-- Add fancyBox main JS and CSS files -->
<script src="js/jquery.magnific-popup.js" type="text/javascript"></script>
<script>

        var events  = <%- JSON.stringify(event) %>
    
</script>

</head>
<body>
	<div class="container-fluid"><!--the containerFuild starts-->

         <div class="header"><!--header starts-->
             <div class="image">
              <a href="/index">
			          <img src="images/NeiconnLogo.png" />
              </a>
		         </div>
           	 <ul>
           		<li><a href="/post_event">Post Your Activity</a></li>
           		<li><button href="#">tester</button></li><!--Angularjs-->
           	</ul>
           	<div class="userpic"><img src="<%= event.content.photo[0] %>" alt="Image"></div>
          </div><!--header ends-->	
           	<div class="bigPic">
           		<!--picture will be set as the background image-->
              <img src="<%= event.content.photo[0] %>" alt="theme">
           	</div>
         
     </div>
         <div class="container content"><!--container starts-->
           <div class="col-sm-8">
           	<div class="top"><!--top starts-->
           		<span class="toptitle"><%= event.content.title %></span>
           		<table class="activity-table" align="center">
           			<tr>
           				<td><i class="fa fa-map-signs"></i><a href="https://www.google.com/maps/place/Japantown,+San+Francisco,+CA/@37.7856183,-122.4328261,17z/data=!4m2!3m1!1s0x808580bf2ab76475:0x1c82fe532473cbc2"><%= event.content.location.address %></a></td>
           				<td><i class="fa fa-venus-mars"></i><%= event.content.category %></td>
           				<td><i class="fa fa-globe"></i><%= event.content.language %></td>
           			</tr>
           			<tr>
           				<td><i class="fa fa-calendar-plus-o"></i><%= event.content.date%></td>
           				<td><i class="fa fa-clock-o"></i><%= event.content.time %></td>
           				<td><i class="fa fa-hourglass-half"></i><%= event.content.duration %></td>
           			</tr>
           		</table>
           	</div><!--top ends-->
            <div class="middle"><!--middle starts-->
               <span class="middletitle">
               	 <h5>Venue</h5>
               	 <p class="middlep"><%= event.content.venue %></p>
               	 <h5>Provisions</h5>
               	 <p class="middlep"><%= event.content.provision %></p>
               	 <h5>About</h5>
               	 <p class="parag"><%= event.content.about %></p>
               	 <h5>Rules</h5>
               	 <ul>
               	 	<li><%%= event.content.rule[0] ></li>
               	 	<li>Please do not overstay without permission.</li>
               	 	<li>Common courtesy and Good Manner are always appreciated.</li>
               	 	<li>Sense of Humor can help facilitating a relaxed atmosphere.</li>
               	 	<li>Active engagement is a great way for other to know more about you.</li>
               	 </ul>

               </span>
            </div><!--middle ends-->
           <div class="bottom"><!--bottom starts-->
           	  <div class="bottom-title"><span>Reviews</span></div>
           	  
           	  <div class="reviews">
                <div class="userpic2"><img src="images/owner1.jpg" alt="Image"></div>
                <div class="reviews-content">
                  <p class="parag">Host is very good.Good management. Good event Organization.</p>
                </div>
           	  	
                 <p class="tag">Eat at Chinatown | January 1st, 2016</p>             
             </div>
           </div><!--bottom ends-->
           <div class="col-sm-4">

           </div>
         </div><!--container ends-->
         </div>
   
</body>
</html>